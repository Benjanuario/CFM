  "share_target": {
    "action": "./",
    "method": "GET",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link"
    },
    "enctype": "application/x-www-form-urlencoded"
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+cfm",
      "url": "./?route=%s"
    }
  ],
  
  // Configurações específicas para iOS
  "apple": {
    "status_bar_style": "black-translucent",
    "prefer_related_applications": false,
    "capable": "yes"
  },
  
  // Configurações específicas para Windows
  "microsoft": {
    "tileColor": "#4CAF50"
  },
  
  // App relacionado (se houver)
  "related_applications": [
    {
      "platform": "play",
      "id": "com.cfm.moz.atualizacoes",
      "url": "https://play.google.com/store/apps/details?id=com.cfm.moz.atualizacoes"
